{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": ["error", "always"],
        "space-in-parens": ["error", "always", { "exceptions": ["{}", "[]", "()"] }],
        "key-spacing": ["error", { "align": "colon" }]
    }
}
